<UserControl x:Class="FitNessCompanionApp.Pages.HomePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FitNessCompanionApp.Pages"
             mc:Ignorable="d" 
             d:DesignWidth="1000">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Hidden" VerticalAlignment="Top">
            <Border Background="White" CornerRadius="10" BorderThickness="0.5" BorderBrush="LightGray" Height="500" Margin="10" MaxWidth="1200">
                <Border.Effect>
                    <DropShadowEffect Color="LightGray"/>
                </Border.Effect>
                <Border>
                    <Grid Margin="20,0,20,0">
                        <Image Source="{Binding DisplayedImage, UpdateSourceTrigger=PropertyChanged}"/>
                        <Canvas x:Name="FadingCanvas" Background="White"/>
                    </Grid>
                </Border>
            </Border>
        </ScrollViewer>
    </Grid>
</UserControl>
